{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "noResolve": false,
    "strict": false,
    "resolveJsonModule": true,
    "lib": ["es2020"],
    "baseUrl": "./packages",
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    },
    "outDir": "dist"
  },
  "exclude": ["node_modules", "es", "packages/server/tsoa-express-template.ts"]
}
